<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.sirilreddy.andromedamusicplayer.MusicPlayer">

    <include
        android:id="@+id/app_bar_nosearch"
        layout="@layout/app_bar_nosearch" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/default_album_art"
            android:background="@drawable/default_album_art"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <include
        android:id="@+id/play_menu"
        layout="@layout/play_bar"
        />


</LinearLayout>